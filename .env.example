# ---------- Developer Access ----------
# Developer emails get FREE unlimited access to all premium features
# Format: comma-separated list of emails (in addition to hardcoded defaults)
# DEVELOPER_EMAILS=dev@example.com,admin@example.com

# ---------- Frontend (Next.js) ----------
# Only variables prefixed with NEXT_PUBLIC_ are exposed to the browser.
NEXT_PUBLIC_API_URL=http://localhost:8000

# ---------- Backend (FastAPI) ----------
# Environment: development, staging, or production
ENVIRONMENT=development

# Secret key for sessions and tokens (CHANGE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mindvibe
# DB_SSL_MODE: verify-full (default, recommended), require-no-verify (dev only), disable (not recommended)
DB_SSL_MODE=verify-full

# Docker Postgres credentials (only used with docker-compose)
POSTGRES_USER=mindvibe_user
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=mindvibe

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Security (placeholders only â€” override in .env.local or host/CI secrets)
JWT_SECRET=change-me-in-local-or-host
EDDSA_ENABLED=true
EDDSA_DUAL_SIGN=true
EDDSA_KEYSET_DIR=./keyset_eddsa

# API
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# OpenAI (optional)
OPENAI_API_KEY=your-api-key-here

# ---------- Stripe Payment Integration ----------
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_BASIC_MONTHLY_PRICE_ID=price_...
STRIPE_BASIC_YEARLY_PRICE_ID=price_...
STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_...
STRIPE_PREMIUM_YEARLY_PRICE_ID=price_...
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_...
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_...

# ---------- Storage Configuration ----------
USE_S3_STORAGE=false
UPLOAD_DIR=./uploads
# AWS S3 settings (only needed if USE_S3_STORAGE=true)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_S3_REGION=us-east-1

# ---------- Security Infrastructure ----------
# Redis Configuration (RECOMMENDED for production)
# Quantum Coherence: Caching reduces API costs by 50-70%
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Caching Configuration (Quantum Coherence Optimizations)
CACHE_KIAAN_RESPONSES=true
CACHE_TTL_SECONDS=3600  # 1 hour cache for KIAAN responses
CACHE_VERSE_TTL_SECONDS=86400  # 24 hours for Gita verses
CACHE_TRANSLATION_TTL_SECONDS=7200  # 2 hours for translations
CACHE_MAX_SIZE_MB=512  # Maximum cache size in memory

# Translation Service
TRANSLATION_ENABLED=true

# Rate Limiting (Redis-backed for distributed systems)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE=redis  # Options: redis, memory

# ---------- Emotional Reset Feature ----------
EMOTIONAL_RESET_ENABLED=true
EMOTIONAL_RESET_RATE_LIMIT=10
EMOTIONAL_RESET_SESSION_TIMEOUT=1800

# ---------- Additional AI Providers (optional) ----------
# Anthropic Claude API
ANTHROPIC_API_KEY=

# Google AI API
GOOGLE_API_KEY=

# Ollama (local LLM)
OLLAMA_URL=http://localhost:11434

# GitHub Token (for KIAAN agent tools)
GITHUB_TOKEN=

# ---------- AI Model Configuration ----------
# Model to use for guidance/karma features
GUIDANCE_MODEL=gpt-4o-mini
KARMA_FOOTPRINT_MODEL=gpt-4o-mini

# OpenAI Moderation API
USE_OPENAI_MODERATION=false

# Anonymization secret (CHANGE IN PRODUCTION!)
ANONYMIZATION_SECRET_KEY=change-me-in-production

# ---------- Mental Health Data Encryption (CRITICAL) ----------
# Wisdom Journeys stores sensitive mental health reflections that MUST be encrypted.
# In production, set MINDVIBE_REQUIRE_ENCRYPTION=true to enforce encryption.

# Generate a Fernet key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MINDVIBE_REFLECTION_KEY=

# Set to true in production to require encryption (app will fail to start without valid key)
MINDVIBE_REQUIRE_ENCRYPTION=false

# ---------- Monitoring & Error Tracking ----------
# Sentry DSN (optional)
SENTRY_DSN=

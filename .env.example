# ---------- Frontend (Next.js) ----------
# Only variables prefixed with NEXT_PUBLIC_ are exposed to the browser.
NEXT_PUBLIC_API_URL=http://localhost:8000

# ---------- Backend (FastAPI) ----------
# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mindvibe

# Security (placeholders only â€” override in .env.local or host/CI secrets)
JWT_SECRET=change-me-in-local-or-host
EDDSA_ENABLED=true
EDDSA_DUAL_SIGN=true
EDDSA_KEYSET_DIR=./keyset_eddsa

# API
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# OpenAI (optional)
OPENAI_API_KEY=your-api-key-here

# ---------- Stripe Payment Integration ----------
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_BASIC_MONTHLY_PRICE_ID=price_...
STRIPE_BASIC_YEARLY_PRICE_ID=price_...
STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_...
STRIPE_PREMIUM_YEARLY_PRICE_ID=price_...
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_...
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_...

# ---------- Storage Configuration ----------
USE_S3_STORAGE=false
UPLOAD_DIR=./uploads
# AWS S3 settings (only needed if USE_S3_STORAGE=true)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_S3_REGION=us-east-1

# ---------- Security Infrastructure ----------
# Redis Configuration (optional)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
CACHE_KIAAN_RESPONSES=false

# Translation Service
TRANSLATION_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true

# ---------- Emotional Reset Feature ----------
EMOTIONAL_RESET_ENABLED=true
EMOTIONAL_RESET_RATE_LIMIT=10
EMOTIONAL_RESET_SESSION_TIMEOUT=1800
